<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane stylesheets="/Booking/Styling.css" styleClass="background" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Booking.singleUser.EditSingleUserSceneController">
    <center>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="250.0" prefWidth="200.0">
            <children>
                <GridPane layoutX="28.0" layoutY="55.0" prefWidth="500.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Username" />
                        <TextField fx:id="usernameField" GridPane.columnIndex="1" />
                        <Label text="First Name" GridPane.rowIndex="1"/>
                        <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <Label text="Surname" GridPane.rowIndex="2"/>
                        <TextField fx:id="surnameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <Label text="Email" GridPane.rowIndex="3" />
                        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="Password" GridPane.rowIndex="4"/>
                        <TextField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                        <Button fx:id="saveBtn" GridPane.columnIndex="0" GridPane.rowIndex="5" mnemonicParsing="false" text="Save" textAlignment="JUSTIFY" onAction="#handleEdit"/>
                    </children>
                </GridPane>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
